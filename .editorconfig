# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
max_line_length = 120
trim_trailing_whitespace = true

[*.json]
indent_size = 2

[*.md]
indent_size = 2
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
indent_size = 4

[*.{sh,fish,zsh}]
indent_size = 2

[*.toml]
indent_size = 4

[*.{yml,yaml}]
indent_size = 2
