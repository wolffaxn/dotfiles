# # vi:ft=conf
#
# docs:
# ghostty +show-config --default --docs | nvim
#

auto-update-channel = tip

# fonts
# ghostty +list-fonts
font-family = JetBrains Mono
font-family-bold = JetBrains Mono
font-family-italic = JetBrains Mono
font-family-bold-italic = JetBrains Mono
font-size = 16

cursor-style = block
cursor-style-blink = true

macos-option-as-alt = left
macos-titlebar-style = tabs

# keybindings
keybind = ctrl+n=new_window

keybind = ctrl+h=goto_split:left
keybind = ctrl+j=goto_split:bottom
keybind = ctrl+k=goto_split:top
keybind = ctrl+l=goto_split:right

keybind = ctrl+a>h=new_split:left
keybind = ctrl+a>j=new_split:down
keybind = ctrl+a>k=new_split:up
keybind = ctrl+a>l=new_split:right
keybind = ctrl+a>f=toggle_split_zoom

keybind = ctrl+a>n=next_tab
keybind = ctrl+a>p=previous_tab

keybind = ctrl+a>r=reload_config

# mouse
mouse-hide-while-typing = true

# shell
shell-integration = zsh
shell-integration-features = cursor,sudo,no-title

# theme
# ghostty +list-themes
#theme = dark:tokyonight,light:tokyonight-day
theme = tokyonight
background-opacity = 0.95
background-blur-radius = 20
window-theme = ghostty

# window
window-decoration = true
window-padding-balance = true
window-save-state = always

working-directory = home
